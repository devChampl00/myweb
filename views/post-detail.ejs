                            </li>
                        </ul>
                    </nav>
                </div> -->
            </main>
        </div>
    </div>
</div>

<script>
    const toTop = document.querySelector('.toTop')
    window.onscroll = () => {
        if (window.pageYOffset > 456) {
            toTop.classList.remove('d-none')
        } else {
            toTop.classList.add('d-none')
        }
    }

    document
        .querySelector('.facebook-lg')
        .setAttribute(
            'href',
            `https://www.facebook.com/sharer/sharer.php?u=${document.URL}/?utm_source=facebook&amp;utm_medium=social&amp;utm_campaign=user-share`
        )
    document
        .querySelector('.twitter-lg')
        .setAttribute(
            'href',
            `https://twitter.com/intent/tweet?text=Judul%20Postingan ${document.URL}`
        )
    document
        .querySelector('.linkedin-lg')
        .setAttribute(
            'href',
            `http://www.linkedin.com/shareArticle?mini=true&amp;url=${document.URL}&amp;title=Judul%20Postingan`
        )
    document
        .querySelector('.telegram-lg')
        .setAttribute(
            'href',
            `https://t.me/share/url?url=${document.URL}&text=Judul%20Postingan`
        )
    document
        .querySelector('.whatsapp-lg')
        .setAttribute(
            'href',
            `https://api.whatsapp.com/send/?text=${document.URL}&type=custom_url&app_absent=0`
        )

    document
        .querySelector('.facebook-sm')
        .setAttribute(
            'href',
            `https://www.facebook.com/sharer/sharer.php?u=${document.URL}/?utm_source=facebook&amp;utm_medium=social&amp;utm_campaign=user-share`
        )
    document
        .querySelector('.twitter-sm')
        .setAttribute(
            'href',
            `https://twitter.com/intent/tweet?text=Judul%20Postingan ${document.URL}`
        )
    document
        .querySelector('.linkedin-sm')
        .setAttribute(
            'href',
            `http://www.linkedin.com/shareArticle?mini=true&amp;url=${document.URL}&amp;title=Judul%20Postingan`
        )
    document
        .querySelector('.telegram-sm')
        .setAttribute(
            'href',
            `https://t.me/share/url?url=${document.URL}&text=Judul%20Postingan`
        )
    document
        .querySelector('.whatsapp-sm')
        .setAttribute(
            'href',
            `https://api.whatsapp.com/send/?text=${document.URL}&type=custom_url&app_absent=0`
        )
</script>

