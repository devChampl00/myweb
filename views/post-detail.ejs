<!-- Page content-->
<div class="container-md col-lg-9 col-xxl-8 my-5">
    <div class="row">
        <!-- Side widget 1 -->
        <div class="col-lg-2 align-items-center d-none d-lg-block share">
            <div class="position-sticky" style="top: 35%">
                <div class="large-3 my-3">
                    <a
                        class="share-link twitter-lg text-body-secondary p-2"
                        href="#"
                        target="_blank"
                        ><i class="bi bi-twitter"></i
                    ></a>
                </div>
                <div class="large-3 my-3">
                    <a
                        class="share-link linkedin-lg text-body-secondary p-2"
                        href="#"
                        target="_blank"
                        ><i class="bi bi-linkedin"></i
                    ></a>
                </div>
                <div class="large-3 my-3">
                    <a
                        class="share-link facebook-lg text-body-secondary p-2"
                        href="#"
                        target="_blank"
                        ><i class="bi bi-facebook"></i
                    ></a>
                </div>
                <div class="large-3 my-3">
                    <a
                        class="share-link whatsapp-lg text-body-secondary p-2"
                        href="#"
                        target="_blank"
                        ><i class="bi bi-whatsapp"></i
                    ></a>
                </div>
                <div class="large-3 my-3">
                    <a
                        class="share-link telegram-lg text-body-secondary p-2"
                        href="#"
                        target="_blank"
                        ><i class="bi bi-telegram"></i
                    ></a>
                </div>
                <div class="large-3 mt-3">
                    <a
                        class="share-link text-body-secondary p-2 d-none toTop"
                        href="#top"
                        ><i class="bi bi-arrow-up-circle"></i
                    ></a>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <div class="col-lg-8 p-0-lg">
            <nav style="--bs-breadcrumb-divider: '/'" aria-label="breadcrumb" class="small-4">
                <ol class="breadcrumb">
                    <a href="#" class="text-reset me-2" onclick="return history.go(-1)">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                    <li class="breadcrumb-item">
                        <a href="/" class="nav-link breadcrumb-link">Home</a>
                    </li>
                    <li class="breadcrumb-item active d-none d-md-block" aria-current="page"><%= post.title %></li>
                </ol>
            </nav>
            <main>
                <article class="bg-white rounded-4 border">
                    <header class="mt-4 mt-lg-5 px-3 px-md-4 px-lg-5">
                        <h1 class="post-title">
                            <%= post.title %>
                        </h1>

                        <div class="d-flex align-items-center mt-3 mb-2 mb-lg-0 pb-3 border-bottom">
                            <div class="flex-shrink-0">
                                <img
                                    <% if (post.userId.image) { %>
                                    src="<%= post.userId.image%>"
                                    <% } else { %>
                                    src="/assets/img/user-default.jpg" alt=""
                                    <% } %>
                                    class="rounded-circle author-post-thumbnail"
                                    itemprop="image"
                                    alt="Foto profil <%= post.userId.fullname %>"
                                />
                                <figcaption class="d-none"><%= post.title %></figcaption>
                            </div>
                            <div class="ms-3">
                                <h6 class="medium m-0" itemprop="author">
                                    <%= post.userId.fullname %>
                                </h6>
                                <p class="small-8 m-0">
                                    <time datetime="<%= post.createdAt.toLocaleDateString('en-CA') %>">
                                        <!-- <i class="bi bi-calendar3"></i> -->
                                        <%= post.createdAt.toLocaleDateString('en-EN', { month: 'short', day: 'numeric', year: '2-digit'}) %>
                                    </time>
                                    <% if (post.category) { %>
                                    <span class="fw-bold mx-1">&centerdot;</span>
                                    <span itemprop="articleSection">
                                        <a href="/?category=<%= post.category.toLowerCase() %>"class="text-decoration-none text-reset">
                                            <!-- <i class="bi bi-folder"></i> -->
                                            <%= capitalizeEachWord(post.category)%>
                                        </a>
                                    </span>
                                    <% } %>
                                </p>
                            </div>
                        </div>

                        <% if (post.tags.length) { %>
                        <div class="tags small-4 mb-lg-2 mt-3">
                            <!-- <i class="bi bi-tags"></i> -->
                            <!-- <span class="me-2"></span> -->
                            <% post.tags.forEach(tag => { %>
                            <a
                                href="/?tag=<%= tag %>"
                                class="tag-link badge bg-body-secondary text-body-secondary text-decoration-none rounded-4 px-3 py-2 my-1"
                                rel="tag"
                                >#<%= tag %>
                            </a>
                            <% }) %>
                        </div>
                        <% } %>
                    </header>

                    <% if (post.thumbnail) { %>
                    <figure class=" mt-3 mt-lg-4 px-3 px-md-4 px-lg-5">
                        <img
                            class="post-thumbnail rounded-4"
                            src="<%= post.thumbnail %>"
                            alt="<%= post.title %>"
                        />
                    </figure>
                    <% } %>
                    <div class="card-body px-3 px-md-4 px-lg-5 pb-4 pb-lg-5 mt-4">
                        <section class="post-body markdown-body">
                            <%- post.content %>
                        </section>
                    </div>
                </article>

                <!-- Share -->
                <section class="d-lg-none mt-5 mb-5 pb-5">
                    <div class="text-center pb-4">Share</div>
                    <div class="text-center">
                        <span
                            class="bg-white px-2 py-3 fs-5 rounded-4 text-body-secondary border"
                        >
                            <a
                                class="share-link facebook-sm text-body-secondary p-2 mx-2"
                                href="#"
                                ><i class="bi bi-facebook"></i
                            ></a>
                            <a
                                class="share-link linkedin-sm text-body-secondary p-2 mx-2"
                                href="#"
                                ><i class="bi bi-linkedin"></i
                            ></a>
                            <a
                                class="share-link twitter-sm text-body-secondary p-2 mx-2"
                                href="#"
                                ><i class="bi bi-twitter"></i
                            ></a>
                            <a
                                class="share-link telegram-sm text-body-secondary p-2 mx-2"
                                href="#"
                                ><i class="bi bi-telegram"></i
                            ></a>
                            <a
                                class="share-link whatsapp-sm text-body-secondary p-2 mx-2"
                                href="#"
                                ><i class="bi bi-whatsapp"></i
                            ></a>
                        </span>
                    </div>
                </section>

                <section id="comments" class="bg-white rounded-4 border p-lg-4 px-3 py-4 my-5">
                    <script src="https://giscus.app/client.js"
                        data-repo="devChampl00/blog-comments"
                        data-repo-id="R_kgDONr94rA"
                        data-category="General"
                        data-category-id="DIC_kwDONr94rM4CmIHN"
                        data-mapping="pathname"
                        data-strict="0"
                        data-reactions-enabled="1"
                        data-emit-metadata="0"
                        data-input-position="bottom"
                        data-theme="light"
                        data-lang="id"
                        crossorigin="anonymous"
                        async>
                    </script>
                </section>

                <!-- Pagination -->
                <!-- <div class="row mt-5">
                    <nav aria-label="Page navigation">
                        <div class="text-center mb-2">Go to :</div>
                        <ul
                            class="pagination justify-content-center align-items-center"
                        >
                            <li class="page-item">
                                <a
                                    class="page-link rounded-start-4 shadow-sm text-body-secondary px-4 py-2"
                                    href="#"
                                    >Prev post</a
                                >
                            </li>
                            <li class="page-item">
                                <a
                                    class="page-link rounded-end-4 shadow-sm text-body-secondary px-4 py-2"
                                    href="#"
                                    >Next post</a
                                >
                            </li>
                        </ul>
                    </nav>
                </div> -->
            </main>
        </div>
    </div>
</div>

<script>
    const toTop = document.querySelector('.toTop')
    window.onscroll = () => {
        if (window.pageYOffset > 456) {
            toTop.classList.remove('d-none')
        } else {
            toTop.classList.add('d-none')
        }
    }

    document
        .querySelector('.facebook-lg')
        .setAttribute(
            'href',
            `https://www.facebook.com/sharer/sharer.php?u=${document.URL}/?utm_source=facebook&amp;utm_medium=social&amp;utm_campaign=user-share`
        )
    document
        .querySelector('.twitter-lg')
        .setAttribute(
            'href',
            `https://twitter.com/intent/tweet?text=Judul%20Postingan ${document.URL}`
        )
    document
        .querySelector('.linkedin-lg')
        .setAttribute(
            'href',
            `http://www.linkedin.com/shareArticle?mini=true&amp;url=${document.URL}&amp;title=Judul%20Postingan`
        )
    document
        .querySelector('.telegram-lg')
        .setAttribute(
            'href',
            `https://t.me/share/url?url=${document.URL}&text=Judul%20Postingan`
        )
    document
        .querySelector('.whatsapp-lg')
        .setAttribute(
            'href',
            `https://api.whatsapp.com/send/?text=${document.URL}&type=custom_url&app_absent=0`
        )

    document
        .querySelector('.facebook-sm')
        .setAttribute(
            'href',
            `https://www.facebook.com/sharer/sharer.php?u=${document.URL}/?utm_source=facebook&amp;utm_medium=social&amp;utm_campaign=user-share`
        )
    document
        .querySelector('.twitter-sm')
        .setAttribute(
            'href',
            `https://twitter.com/intent/tweet?text=Judul%20Postingan ${document.URL}`
        )
    document
        .querySelector('.linkedin-sm')
        .setAttribute(
            'href',
            `http://www.linkedin.com/shareArticle?mini=true&amp;url=${document.URL}&amp;title=Judul%20Postingan`
        )
    document
        .querySelector('.telegram-sm')
        .setAttribute(
            'href',
            `https://t.me/share/url?url=${document.URL}&text=Judul%20Postingan`
        )
    document
        .querySelector('.whatsapp-sm')
        .setAttribute(
            'href',
            `https://api.whatsapp.com/send/?text=${document.URL}&type=custom_url&app_absent=0`
        )
</script>

<script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": "<%= post.title %>",
      "image": "<%= `${post.thumbnail}` %>",
      "author": {
        "@type": "Person",
        "name": "<%= post.userId.name %>"
      },
      "publisher": {
        "@type": "Organization",
        "name": "<%= locale.name %>",
        "logo": {
          "@type": "ImageObject",
          "url": "<%= locale.icon %>"
        }
      },
      "datePublished": "<%= post.createdAt.toISOString() %>",
      "dateModified": "<%= post.updatedAt ? post.updatedAt.toISOString() : post.createdAt.toISOString() %>",
      "description": "<%= post.excerpt %>",
      "mainEntityOfPage": "<%= locale.url %>/<%= post.slug %>"
    }
    </script>
