<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />
        <meta name="description" content="" />
        <meta name="author" content="devchamploo" />
        <meta name="keywords" content="" />

        <title>Lostpeople | Dashboard</title>

        <link href="/css/bootstrap.min.css" rel="stylesheet" />
        <link href="/css/dashtemplate.css" rel="stylesheet" />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap"
            rel="stylesheet"
        />
        <!-- CK Editor -->
        <link
            rel="stylesheet"
            href="https://cdn.ckeditor.com/ckeditor5/42.0.1/ckeditor5.css"
        />
        <link href="/css/dashboard.css" rel="stylesheet" />
    </head>

    <body>
        <!-- Logout -->
        <form
            id="logout-form"
            action="/dashboard/logout?_csrf=<%= csrfToken %>"
            method="POST"
            style="display: none"
        ></form>

        <div class="wrapper">
            <%- include('../partials/dashboard-sidebar') %>

            <div class="main">
                <%- include('../partials/dashboard-navbar') %>

                <!-- Page content -->
                <%- body %>

                <!-- <%- include('../partials/dashboard-footer') %> -->
            </div>
        </div>

        <!-- User modal -->
        <div
            class="modal fade"
            id="userDetail"
            tabindex="-1"
            aria-labelledby="userDetailLabel"
            aria-hidden="true"
        >
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="userDetailLabel">
                            My Profile
                        </h4>
                        <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                        ></button>
                    </div>
                    <div class="modal-body d-flex py-0">
                        <div class="align-self-center w-100">
                            <table class="table mb-0">
                                <tbody>
                                    <% if (authUser.image) { %>
                                    <tr>
                                        <td colspan="2">
                                            <div class="py-3 text-center mb-2">
                                                <img
                                                    src="/uploads/users/<%= authUser.image %>"
                                                    alt="<%= authUser.fullname %>"
                                                    class="rounded-circle img-thumbnail"
                                                    style="
                                                        width: 200px;
                                                        height: 200px;
                                                        object-fit: cover;
                                                    "
                                                />
                                            </div>
                                        </td>
                                    </tr>
                                    <% } %>
                                    <tr>
                                        <td style="width: 25%;">Fullname</td>
                                        <td class="text-end" style="width: 75%;">
                                            <%= authUser.fullname %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Username</td>
                                        <td class="text-end">
                                            <%= authUser.username %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <td class="text-end">
                                            <%= authUser.email %>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a
                            class="btn text-primary"
                            href="/dashboard/users/<%= authUser._id %>"
                        >More</a>
                        <a
                            class="btn btn-primary"
                            href="/dashboard/users/<%= authUser._id %>/edit"
                        >Edit</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Logout modal -->
        <div
            class="modal fade"
            id="logoutAction"
            tabindex="-1"
            aria-labelledby="logoutActionLabel"
            aria-hidden="true"
        >
            <div class="modal-dialog modal-sm modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body text-center pt-5 pb-4 px-5">
                        <div class="mb-4">
                            <div class="fs-4 fw-bolder mb-2">Are you sure?</div>
                            This action will end your active session!
                        </div>
                        <div class="mb-2">
                            <button
                                class="btn btn-primary"
                                onclick="document.getElementById('logout-form').submit();"
                            >
                                Logout
                            </button>
                            <button
                                type="button"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal"
                            >
                                Cancel
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- <script src="/js/bootstrap.bundle.min.js"></script> -->
        <script src="/js/dashtemplate.js"></script>
    </body>
</html>
